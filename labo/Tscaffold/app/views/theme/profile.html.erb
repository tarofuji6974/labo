<% if @user.name == nil %>
  <p><%= @user.email %></p>
<% else %>
  <p><%= @user.name %></p>
<% end %>


<div id ="profile_area">
  <p>プロフィール  <%= link_to("編集する","/profile_edit/#{@user.id}")%></p>
  <%= @user.profile %>
</div>
<div id = "my_theme_area">
  <% if @theme.empty? %>
    <p>まだお題が1件もありません</p>
  <% else %>
    <% @theme.each do |theme| %>
      <!--要ページへのリンク/ステータスの表示-->
      <p><%= theme.theme %> / <%= link_to("編集","/theme_edit/#{theme.id}/#{theme.url}")%> / <%= link_to("削除する","/delete/#{theme.id}",{method:"post",data: { confirm: "削除しますか？" }}) %></p>
    <% end %>
  <% end %>
</div>